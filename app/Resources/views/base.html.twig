<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>StartUp - WeekEnd</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/jquery-ui.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<div class="container-fluid p-0">
    {#HEADER#}
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">LOGO</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    {% if app.request.get('_route') == "home_consumer" %}
                        <a class="nav-link" href="{{ path('home_consumer') }}">Accueil</a>
                    {% else %}
                        <a class="nav-link" href="{{ path('home_annonceur') }}">Accueil</a>
                    {% endif %}

                </li>
                {% if app.user and ('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_security_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        {% if app.request.get('_route') == "home_annonceur" %}
                            <a class="nav-link"
                               href="{{ path('fos_user_registration_register', {'annonceur':'true'}) }}">Inscription</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('fos_user_registration_register') }}">Inscription</a>
                        {% endif %}
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

    {% block body %}


    {% endblock %}
</div>

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.2.6/vue.js"></script>
    <script type="application/javascript" src="{{ asset('assets/js/vue-resource.min.js') }}"></script>
    <script type="application/javascript" src="{{ asset('assets/js/jquery.min.js') }}"></script>
    <script type="application/javascript" src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <script type="application/javascript" src="{{ asset('assets/js/lodash.min.js') }}"></script>
{% endblock %}
</body>
</html>
